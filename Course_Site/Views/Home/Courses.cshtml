@using Course.Shared


@model IEnumerable<ProgrammingCourse>
@{
    ViewData["Title"] = "Portfolio_Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pagination.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Course Details</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Courses</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <div class="swiper-slide">
                                <img src="~/img/portfolio/Front-End-Frameworks-for-Design-and-Development.jpg" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/img/portfolio/Front End 1.jpg" alt="">
                            </div>



                            <div class="swiper-slide">
                                <img src="~/img/portfolio/315876130214731.jpg" alt="">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Project information</h3>
                        <ul>
                            @if (Model is not null)
                            {
                                @foreach (ProgrammingCourse c in Model)
                                {
                                    <li><strong>Course Name</strong>: @Html.DisplayFor(p=>c.CourseName)</li>
                                    <li><strong>Duration</strong>: @Html.DisplayFor(p=>c.Duration)</li>
                                    <li><strong>Fututre Job</strong>: @Html.DisplayFor(p=>c.FutureJob)</li>

                                }
                            }
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        @if (Model is not null)
                        {
                            @foreach (ProgrammingCourse c in Model)
                            {
                                <h2>Description of the course</h2>
                                <p>
                                    @Html.DisplayFor(p=>c.Description)
                                </p>
                            }
                        }

                    </div>

                    
                    <ul class="pagination">
                        
                  
                <li class="pagination_li"><a href="#" class="pagination_a prev">Prev</a></li>
                <li class="pagination_li pageNumber active"><a class="pagination_a" href="#">1</a></li>
                <li class="pagination_li pageNumber"><a class="pagination_a" href="#">2</a></li>
                <li class="pagination_li pageNumber"><a class="pagination_a" href="#">3</a></li>
                <li class="pagination_li pageNumber"><a class="pagination_a" href="#">4</a></li>
                <li class="pagination_li pageNumber"><a class="pagination_a" href="#">5</a></li>
                <li class="pagination_li"><a href="#" class="pagination_a next">Next</a></li>
                  
                  
              </ul>
              
                </div>
                <script type="text/javascript"></script>
                <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="~/js/PAG.js"></script>
            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->
<div id="preloader"></div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
<script src="~/vendor/purecounter/purecounter.js"></script>
<script src="~/vendor/aos/aos.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="~/js/main.js"></script>


    



