@using Course.Shared
@model IEnumerable<ProgrammingCourse>
@using Course_Site.Models
@{
    ViewData["Title"] = "GetCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Pager pager = new Pager();
    int PageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/table.css" />
    <link rel="stylesheet" href="~/css/pagination.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>Table</title>
</head>


 <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          
          <ol>
            
            
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->
   

    <section class="inner-page">
      <div class="container">
        
    <h1 class="table">Information Table</h1>
    <hr>


    <table class="center">
        <tr>
                <th>
                    <a asp-action="GetCourse" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.CourseName)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <a asp-action="GetCourse" asp-route-sortOrder="@ViewData["DurationSortParm"]">@Html.DisplayNameFor(model => model.Duration)</a>
                </th>
                <th>
                    <a asp-action="GetCourse" asp-route-sortOrder="@ViewData["PriceSortParm"]">@Html.DisplayNameFor(model => model.Price)</a>
                </th>
            <th></th>
        </tr>
                @foreach (var item in Model) {
        <tr>
            <td>
                <a href="/Home/Courses?pg=@item.CourseId">@Html.DisplayFor(c=>item.CourseId)</a> 
            </td>
            <td>
                <a href="/Home/Courses?pg=@item.CourseId">@Html.DisplayFor(c=>item.CourseName)</a> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
        
    }
    </table>
    
            @if (pager.TotalPages > 0)
            {
                <ul class="pagination">
                    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                    {
                        <li class="pagination_li pageNumber page-item @(pge == pager.CurrentPage ? "active" : "")">
                            <a class="pagination_a" asp-controller = "Home" asp-action="GetCourse" asp-route-pg="@pge">@pge</a>
                        </li>
                    }
                </ul>
            }
            <script type="text/javascript"></script>
                <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="~/js/PAG.js"></script>
        </div>
    </section>

  </main><!-- End #main -->
  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="~/vendor/purecounter/purecounter.js"></script>
  <script src="~/vendor/aos/aos.js"></script>
  <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="~/js/main.js"></script>