     Academy academy = new();
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/table.css" />
    <title>Table</title>
</head>


 <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          
          <ol>
            
            
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->
   


    <section class="inner-page">
      <div class="container">
        
    <h1 class="table">Information Table</h1>
    <hr>

    <table class="center">
        <tr id="header">

            <th>StudentID</th>
            <th>FirstMidName</th>
            <th>LastName</th>
            <th>EnrollmentDate</th>
            <th>Details</th>
        </tr>
                @if (Model is not null)
                {
                    

                    @foreach (var p in Model)
                    {
                        

                            <tr id="tr">  

                                <td id="td"> 
                                    @Html.DisplayFor(c=>p.StudentID)
                                 </td>    
                                 <td id="td"> 
                                    @Html.DisplayFor(c=>p.FirstMidName)
                                 </td>
                                 <td id="td"> 
                                    @Html.DisplayFor(c=>p.LastName)
                                 </td>
                                 <td id="td"> 
                                    @Html.DisplayFor(c=>p.EnrollmentDate)
                                 </td>
                                 
                                 <td id="td"> 
                                    <a asp-action="Details" asp-route-id="@p.StudentID">Details</a>
                                 </td>
                                
                           </tr>
                    
                    }
                }






                </table>
                </div>
</section>
